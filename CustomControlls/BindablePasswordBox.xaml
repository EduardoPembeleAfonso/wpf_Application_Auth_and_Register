<UserControl x:Class="myFirtsAppDesktop.CustomControlls.BindablePasswordBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:myFirtsAppDesktop.CustomControlls"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="600">

	<PasswordBox x:Name="txtPassword"
				 Width="250" Height="25"
                 FontSize="10" FontWeight="Medium" FontFamily="Montserrat"
                 Background="Transparent" Foreground="#0f0f10" CaretBrush="LightGray"
                 BorderBrush="DarkGray" BorderThickness="0,0,0,1"
                 VerticalContentAlignment="Center"
                 Padding="5,0,0,0">
	</PasswordBox>
</UserControl>
